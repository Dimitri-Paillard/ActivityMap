{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ activity.image }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ activity.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ activity.lng }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ activity.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ activity.zipcode }}</td>
            </tr>
            <tr>
                <th>IsValid</th>
                <td>{{ activity.isValid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsCertified</th>
                <td>{{ activity.isCertified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ activity.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activity_index') }}">back to list</a>

    <a href="{{ path('activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
