{% for activities  in activity %}

	<div class="col-md-4">
		<div class="card mb-4 shadow-sm">
			<div class="card-body">
				<h3 class="card-text">{{ activities.name }}</h3>
				<img src="{{ asset('build/images/' ~ activities.image ) }}" alt="{{ activities.image }}" class="img image-responsive">
				<p>{{ activities.description }}</p>
			</div>
		</div>
	</div>

{% endfor %}
